<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="77dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="619dp"
        android:text="@string/game_choise"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:onClick="back2"
        android:text="Свалить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gameRock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="26dp"
        android:onClick="play1"
        android:text="Выбрать камень"
        app:layout_constraintBottom_toTopOf="@+id/gamePaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gamePaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="26dp"
        android:onClick="play2"
        android:text="Выбрать бумагу"
        app:layout_constraintBottom_toTopOf="@+id/gameScissors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameRock" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gameScissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="257dp"
        android:onClick="play3"
        android:text="Выбрать ножницы"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamePaper" />

</androidx.constraintlayout.widget.ConstraintLayout>